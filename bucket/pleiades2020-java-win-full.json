    "version": "2020-12.20201219",
    "architecture": {
        "64bit": {
            "url": "http://ftp.jaist.ac.jp/pub/mergedoc/pleiades/2020/pleiades-2020-12-java-win-64bit-jre_20201219.zip#/dl.7z",
            "hash": "md5:9941e775a757e15e9955e4bab4c0e2fb"
        }
    },
    "extract_dir": "pleiades",
    "persist": [
        "eclipse\\configuration",
        "workspace"
    ],
    "shortcuts": [
        [
            "eclipse/eclipse.exe",
            "Pleiades All in One Java 2020-12.20201219"
        ]
    ],
    "post_install": "
        $shortcuts = @(arch_specific 'shortcuts' $manifest $arch)
        $shortcutName = $shortcuts[0].item(1)
        $scoop_startmenu_folder = shortcut_folder $global
        $wsShell = New-Object -ComObject WScript.Shell
        $shortcut = $wsShell.CreateShortcut(\"$scoop_startmenu_folder\\$shortcutName.lnk\")
        $shortcut.WorkingDirectory = \"$dir\\eclipse\"
        $shortcut.Save()
    ",
    "checkver": {
        "url": "http://mergedoc.osdn.jp/pleiades_distros2020.html",
        "re": "((?<fileVersion>[\\d]{4}-[\\d]{2})\\.(?<date>[\\d]{8}))"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "http://ftp.jaist.ac.jp/pub/mergedoc/pleiades/$majorVersion.$minorVersion/pleiades-$fileVersion-java-win-64bit-jre_$date.zip#/dl.7z"
            },
            "32bit": {
                "url": "http://ftp.jaist.ac.jp/pub/mergedoc/pleiades/$majorVersion.$minorVersion/pleiades-$fileVersion-java-win-32bit-jre_$date.zip#/dl.7z"
            }
        }
    }
}
